upstream unicorn {
  server              unix:<%= unicorn_socket %> fail_timeout=0;
}


server {
  listen              80;
  server_name         mobtownballroom.com;
  rewrite             ^(.*) https://$server_name$1 permanent;

  location ~ \.(php)$ {
    deny              all;
  }

  access_log          /dev/null;
  error_log           /dev/null;
}


server {
  ssl                   on;
  listen                443 ssl;
  client_max_body_size  50M;
  server_name           mobtownballroom.com;
  root                  <%= deploy_to %>/current/public;
  try_files             $uri /system/maintenance.html @unicorn;

  location @unicorn {
    proxy_set_header  X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header  X-Forwarded-Proto $scheme;
    proxy_set_header  Host $http_host;
    proxy_redirect    off;
    proxy_pass        http://unicorn;

    access_log        <%= deploy_to %>/current/log/unicorn.access.log;
    error_log         <%= deploy_to %>/current/log/unicorn.error.log;
  }

  location ~ ^/(assets|images|javascripts|stylesheets|swfs|system)/ {
    gzip_static       on;
    expires           max;
    add_header        Cache-Control public;
    add_header        Last-Modified "";
    add_header        ETag "";

    open_file_cache          max=1000 inactive=500s;
    open_file_cache_valid    600s;
    open_file_cache_errors   on;
    break;
  }

  access_log          <%= deploy_to %>/current/log/nginx.access.log;
  error_log           <%= deploy_to %>/current/log/nginx.error.log;

  # Rails error pages
  error_page 500 502 503 504 /500.html;
  location = /500.html {
    root <%= deploy_to %>/current/public;
  }
  
  #Rails 404 page
  error_page 404 /404.html;
  location = /404.html {
      root <%= deploy_to %>/current/public;
  }

}
