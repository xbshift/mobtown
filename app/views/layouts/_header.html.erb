<div class="navbar">
  <div class="navbar-inner">
    <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>

    <!-- Be sure to leave the brand out there if you want it shown -->
    <%= link_to image_tag('mobtown-logo-200.png', size: '200x18'), root_path, class: "brand" %>
 
    <!-- Everything you want hidden at 940px or less, place within here -->
    <div class="nav-collapse collapse">
      <ul class="nav">
        <li class="<%= 'active' if current_page?(venue_path) %>"><%= link_to "The Venue", venue_path %></li>
        <li id="classes-nav-element" class="dropdown ">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Classes</a>
          <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
            <li><%= link_to "Beginner Swing Dancing", dance_classes_path + '/swing' %></li>
            <li><%= link_to "Lindy Hop", dance_classes_path + '/lindy' %></li>
            <li><%= link_to "West Coast Swing", dance_classes_path + '/west_coast' %></li>
            <li><%= link_to "Belly Dancing", dance_classes_path + '/belly_dancing' %></li>
            <li><%= link_to "Salsa", dance_classes_path + '/salsa' %></li>
          </ul>
        </li>
        <li class="<%= 'active' if current_page?(dances_path) %>"><%= link_to "Dance Nights", dances_path %></li>
        <li class="<%= 'active' if current_page?(staff_path) %>"><%= link_to "Staff", staff_path %></li>
        <li id="stuff-nav-element" class="dropdown ">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Stuff</a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Videos", videos_path %></li>
          </ul>
        <li id="special-events-nav-element" class="dropdown ">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Special Events</a>
          <ul class="dropdown-menu" role="menu">
            <% @special_events.each do |special_event| %>
              <li><%= link_to special_event.title, event_path(special_event) %></li>
            <% end %>
          </ul>
      </ul>
    </div>
  </div>
</div>
