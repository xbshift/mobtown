<fieldset>
  <%= f.input :name, as: 'string', placeholder: 'e.g., Full Pass' %>
  <% if f.object.passable_type == 'DanceClass' %>
    <%= f.input :session, as: 'string', placeholder: 'e.g., Aug 1 - Sep 15' %>
  <% end %>
  <%= f.input :description, placeholder: 'Optional explanation' %>
  <%= f.input :price %>
  <%= f.input :limit, placeholder: 'If blank, unlimited.' %>
  <%= f.input :archived, as: :boolean, label: false, inline_label: 'Archive: The pass and its registration records are retained, but visitors will not see this pass on the site.' %>
</fieldset>
