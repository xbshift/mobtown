<div id="heroCarousel" class="carousel slide">
  <!-- Carousel items -->
  <div class="carousel-inner">
  <% @is_first = true %>
  <% @events.each do |event| %>
    <div class="item <%= @is_first? 'active' : '' %>">
      <% @is_first = false %>
      <div class="overflow-box">
        <% if event.prose.blank? and event.link.nil? %>
          <%= image_tag event.photo.url(:carousel) %>
          <div class="carousel-caption">
            <p>
            <span class="event-header">
              <%= content_tag :span, event.starts_at.strftime("%A, %b %e"), class: 'event-date' %>
              <%= content_tag :span, event.title, class: 'event-title' %>
            </span>
            <%= raw event.summary %></p>
          </div>
        <% else %>
        <% link = event.link.nil? ? event_path(event) : event.link %>
          <%= link_to(link) do %>
            <%= image_tag(event.photo.url(:carousel)) %>
            <div class="carousel-caption">
              <p>
              <span class="event-header">
                <%= content_tag :span, event.starts_at.strftime("%A, %b %e"), class: 'event-date' %>
                <%= content_tag :span, event.title, class: 'event-title' %>
              </span>
              <%= raw event.summary %></p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
  </div>
  <!-- Carousel nav -->
  <a class="carousel-control left" href="#heroCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#heroCarousel" data-slide="next">&rsaquo;</a>
</div>

  <div class="row-fluid">
    <div class="span3 feature-box">
      <h3 class="headline"><%= link_to 'Get the Skinny', calendar_path %></h3>
      <p>See what we've got in store.</p>
    </div>
    <div class="span3 feature-box">
      <h3 class="headline"><%= link_to 'Sign Up for Classes', dance_classes_path %></h3>
      <p>The Mobtown Ballroom is committed to making it as easy as possible to get started dancing. You're in good hands.</p>
    </div>
    <div class="span3 feature-box">
      <h3 class="headline"><%= link_to 'Drink the Kool-Aid', posts_path %></h3>
      <p>This is where we vent our spleen.</p>
    </div>
    <div class="span3 feature-box">
      <h3 class="headline"><%= link_to 'Read Our Manifesto', mobmentality_path %></h3>
      <p>This is what we do.</p>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span3 feature-box">
      <%= link_to "Calendar", events_path, class: "btn btn-dirtydog" %>
    </div>
      <div class="span3 feature-box"><%= link_to "Do it", dance_classes_path, class: "btn btn-dirtydog" %>
    </div>
      <div class="span3 feature-box"><%= link_to 'The Mob Blog', posts_path, class: 'btn btn-dirtydog' %>
    </div>
    <div class="span3 feature-box"><%= link_to 'The Mob Mentality', mobmentality_path, class: 'btn btn-dirtydog' %>
    </div>
  </div>

<% content_for :javascript do %>
  <script>
      $(document).ready(function(){
        $('.carousel').carousel({
          interval: 5000
        });
      });
  </script>
<% end %>
