<div id="heroCarousel" class="carousel slide">
  <!-- Carousel items -->
  <div class="carousel-inner">
  <% @events.each_with_index do |event, i| %>
    <% if i == 0 %>
      <div class="item active">
    <% else %>
      <div class="item">
    <% end %>
      <div class="overflow-box">
        <%= image_tag event.photo.url(:carousel) %>
        <div class="carousel-caption">
          <p><span class="event-title"><%= event.title %></span><%= raw event.summary %></p>
        </div>
      </div>
    </div>
  <% end %>
  </div>
  <!-- Carousel nav -->
  <a class="carousel-control left" href="#heroCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#heroCarousel" data-slide="next">&rsaquo;</a>
</div>

  <div class="row-fluid">
    <div class="span3 feature-box">
      <h3 class="headline"><%= link_to 'Get the Skinny', calendar_path %></h3>
      <p>See what we've got in store.</p><%= link_to "Calendar", events_path, class: "btn btn-dirtydog" %>
    </div>
    <div class="span3 feature-box">
      <h3 class="headline"><%= link_to 'Sign Up for Classes', dance_classes_path %></h3>
      <p>The Mobtown Ballroom is committed to making it as easy as possible to get started dancing. You're in good hands.</p><%= link_to "Do it", dance_classes_path, class: "btn btn-dirtydog" %>
    </div>
    <div class="span3 feature-box">
      <h3 class="headline"><%= link_to 'Drink the Kool-Aid', '#' %></h3>
      <p>This is where we vent our spleen.</p><%= link_to 'The Mob Blog', '#', class: 'btn btn-dirtydog' %>
    </div>
    <div class="span3 feature-box">
      <h3 class="headline"><%= link_to 'Read Our Manifesto', mobmentality_path %></h3>
      <p>This is what we do.</p><%= link_to 'The Mob Mentality', mobmentality_path, class: 'btn btn-dirtydog' %>
    </div>
  </div>

<% content_for :javascript do %>
  <script>
      $(document).ready(function(){
        $('.carousel').carousel({
          interval: 5000
        });
      });
  </script>
<% end %>
