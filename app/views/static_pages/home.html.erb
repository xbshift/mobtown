<div id="heroCarousel" class="carousel slide">
  <!-- Carousel items -->
  <div class="carousel-inner">
    <div class="active item">
      <div class="overflow-box">
        <%= image_tag "carousel1.jpg" %>
      </div>
      <div class="carousel-caption">
        <p><span class='event-title'>Friday Night Dance</span>
        Dance late into the night. Try a drop-in beginner lesson at 8 ($5) and stay for the dance ($7). We'll be open as late as you want to stay.</p>
      </div>
    </div>
    <div class="item">
      <div class="overflow-box">
        <%= image_tag "carousel2.jpg" %>
      </div>
      <div class="carousel-caption">
        <p>Hey turkeys 2</p>
      </div>
    </div>
    <div class="item">
      <div class="overflow-box">
        <%= image_tag "carousel3.jpg" %>
      </div>
      <div class="carousel-caption">
        <p>Hey turkeys 3</p>
      </div>
    </div>
  </div>
  <!-- Carousel nav -->
  <a class="carousel-control left" href="#heroCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#heroCarousel" data-slide="next">&rsaquo;</a>
</div>

<% content_for :javascript do %>
  <script>
      $(document).ready(function(){
        $('.carousel').carousel({
          interval: 5000
        });
      });
  </script>
<% end %>
