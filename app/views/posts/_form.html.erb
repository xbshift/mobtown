<%= simple_form_for @post, :html => {multipart: 'true', class: 'form-horizontal'}  do |f| %>
  <% if @post.errors.any? %>
  <div id="errorExplanation">
    <p><%= pluralize(@post.errors.count, "error") %> prohibited
        this class from being saved:</p>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <%= f.input :title, placeholder: 'Post Title', label: nil %>
  <%= f.input :publish, hint: "Leave unchecked to save as a draft." %>
  <%= f.input :prose, :as => :ckeditor %>
  <%= f.submit class: 'btn-primary' %>
<% end %>
