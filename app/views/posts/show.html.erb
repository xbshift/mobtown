<h3>The Mob Blog</h3>
<% if logged_in? %>
  <p class='war-room'>War Room: <%= link_to "Edit or Destroy", edit_post_path(@post) %></p>
<% end %>
<div class="row-fluid">
  <div class="span8">
    <h4><%= @post.title %></h4>
    <div class="content">
      <%= raw @post.prose %>
    </div>
  </div>
  <div class="span4">
  <ul> 
  <% @posts.each do |post| %>
    <li><%= link_to(post.title, post_path(post)) %></li>
  <% end %>
  </ul>
  </div>
</div>
